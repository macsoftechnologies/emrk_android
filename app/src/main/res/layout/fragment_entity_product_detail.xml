<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragments.MyEntityFragment">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="10dp"
        app:cardCornerRadius="8dp"
        app:contentPadding="5dp"
        app:cardElevation="5dp">

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_margin="5dp"
            android:layout_width="80dp"
            android:src="@drawable/entity_profile"
            android:layout_height="80dp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="10dp"
            android:layout_height="wrap_content">
        <LinearLayout
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/lato_bold"
                android:text="Entity Name"
                android:textColor="@color/colorPrimary"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"/>
            <ImageView
                android:visibility="gone"
                android:src="@drawable/edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>
            <TextView
                android:text="Owner Name"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <TextView
                android:layout_margin="2dp"
                android:text="9545678967"
                android:textColor="@color/black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

            <LinearLayout
                android:gravity="center_vertical"
                android:layout_width="match_parent"
                android:layout_marginTop="20dp"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/txt_view_contacts"
                    android:text="View Contacts"
                    android:layout_height="35dp"
                    android:paddingLeft="15dp"
                    android:drawableTint="@color/white"
                    android:drawableLeft="@drawable/contact_white"
                    android:background="@drawable/login_submit_bg"
                    android:textColor="@color/white"
                    android:layout_width="120dp"
                    android:gravity="center"
                    />

                <TextView
                    android:id="@+id/txt_call"
                    android:text="Call"
                    android:paddingLeft="15dp"
                    android:drawableTint="@color/white"
                    android:layout_marginLeft="10dp"
                    android:drawableLeft="@drawable/contact_white"
                    android:background="@drawable/login_submit_bg"
                    android:textColor="@color/white"
                    android:layout_width="120dp"
                    android:layout_height="35dp"
                    android:gravity="center"
                    />

            </LinearLayout>
        </LinearLayout>

    </LinearLayout>
    </androidx.cardview.widget.CardView>
    <View
        android:layout_marginTop="5dp"
        android:background="@color/grey"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"/>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="10dp"
        app:cardCornerRadius="8dp"
        app:contentPadding="5dp"
        app:cardElevation="5dp">
        <LinearLayout
            android:padding="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/lato_bold"
                    android:text="Product Name"
                    android:textSize="15sp"
                    android:textColor="@color/colorPrimary" />


                <ImageView
                    android:layout_width="300dp"
                    android:layout_height="200dp"
                    android:layout_gravity="center_vertical|center"
                    android:src="@drawable/search_product">
                </ImageView>


                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_weight="0.5"
                        android:layout_width="wrap_content"
                        android:text="Size: "
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="BC x DC"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_weight="0.5"
                        android:layout_width="wrap_content"
                        android:text="Qty: "
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="1000"
                        android:layout_height="wrap_content"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_weight="0.4"
                        android:layout_width="wrap_content"
                        android:text="Address: "
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="Location"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


                <LinearLayout
                    android:layout_margin="5dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_marginLeft="5dp"
                        android:layout_weight="0.4"
                        android:layout_width="wrap_content"
                        android:text="Length: "
                        android:layout_height="wrap_content"/>
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:text="48ft"
                        android:layout_height="wrap_content"/>

                </LinearLayout>


                <LinearLayout
                    android:visibility="gone"
                    android:orientation="vertical"
                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_gravity="center_vertical|center"
                        android:text="Share"
                        android:layout_height="20dp"
                        android:paddingLeft="15dp"
                        android:drawableTint="@color/white"
                        android:drawableRight="@drawable/contact_white"
                        android:background="@drawable/login_submit_bg"
                        android:textColor="@color/white"
                        android:layout_width="80dp"
                        android:gravity="center"
                        />

                    <TextView
                        android:id="@+id/txtviewentity"
                        android:layout_marginTop="10dp"
                        android:layout_gravity="center_vertical|center"
                        android:text="View Entity"
                        android:paddingLeft="15dp"
                        android:drawableTint="@color/white"
                        android:layout_marginLeft="10dp"
                        android:drawableLeft="@drawable/contact_white"
                        android:background="@drawable/login_submit_bg"
                        android:textColor="@color/white"
                        android:layout_width="120dp"
                        android:layout_height="35dp"
                        android:gravity="center"
                        />

                </LinearLayout>


</LinearLayout>
</LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>