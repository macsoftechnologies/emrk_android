<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#E0F4FE"
    android:padding="10dp"
    android:orientation="vertical"
    tools:context=".fragments.HelpFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:background="#fff"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:textSize="16sp"
            android:id="@+id/txt_header_1"
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:textColor="@color/white"
            android:text="If Product is not in the list, Please add here "
            android:drawableRight="@drawable/white_arrow_down"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/ll_content_1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:padding="10dp"
                android:text="If Product is not in the list, Please add your product here "
                android:layout_height="wrap_content"/>
            <EditText
                android:layout_width="match_parent"
                android:padding="16dp"
                android:layout_margin="5dp"
                android:hint="Enter Product"
                android:singleLine="true"
                android:textSize="16sp"
                android:background="@drawable/help_stroke"
                android:layout_height="wrap_content"/>    <EditText
                android:layout_width="match_parent"
                android:padding="16dp"
                android:layout_margin="5dp"
                android:hint="Enter Description"
                android:singleLine="true"
                android:textSize="16sp"
                android:background="@drawable/help_stroke"
                android:layout_height="wrap_content"/>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content">
                <EditText
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:padding="12dp"
                    android:layout_marginLeft="5dp"
                    android:hint="Add Images"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:background="@drawable/help_stroke"
                    android:layout_height="wrap_content"/>
                <TextView
                    android:layout_gravity="center_horizontal"
                    android:text="Upload"
                    android:gravity="center"
                    android:background="@drawable/ll_trail_bg_start_trail"
                    android:textColor="@color/white"
                    android:layout_width="120dp"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>

            <TextView
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_gravity="center_horizontal"
                android:text="SUBMIT"
                android:padding="12dp"
                android:background="@drawable/login_submit_bg"
                android:textColor="@color/white"
                android:layout_width="120dp"
                android:gravity="center"
                android:layout_height="wrap_content"
                />

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:background="#fff"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="If your location doesn't exist, Please add here "
            android:drawableRight="@drawable/white_arrow_down"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/ll_content_2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>

    </LinearLayout>


    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:background="#fff"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:textSize="16sp"
            android:textColor="@color/white"
            android:text="How to use the app"
            android:drawableRight="@drawable/white_arrow_down"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/ll_content_3"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:background="#fff"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:textColor="@color/white"
            android:text="Report"
            android:textSize="16sp"
            android:drawableRight="@drawable/white_arrow_down"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/ll_content_4"
            android:orientation="vertical"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:background="#fff"
        android:orientation="vertical"
        android:layout_height="wrap_content">
        <TextView
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:textColor="@color/white"
            android:text="Feedback"
            android:drawableRight="@drawable/white_arrow_down"
            android:layout_height="wrap_content"/>
        <LinearLayout
            android:id="@+id/ll_content_5"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </LinearLayout>

    </LinearLayout>


</LinearLayout>