<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:background="@color/colorPrimary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginStart="5dp"
                android:layout_marginTop="5dp"
                android:layout_marginEnd="5dp"
                android:layout_marginBottom="5dp"
                android:gravity="center_vertical|center"
                android:text="Length"
                android:textColor="@color/white"
                android:textSize="14sp">

            </TextView>

            <ImageView
                android:id="@+id/ivdelete"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentRight="true"
                android:layout_centerHorizontal="true"
                android:layout_gravity="right"
                android:layout_marginRight="5dp"
                android:src="@drawable/white_arrow_down"></ImageView>

        </RelativeLayout>


        <TextView
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:text="Minimum"
            android:textColor="@color/black"
            android:textSize="14sp">

        </TextView>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:gravity="center"
                android:background="@drawable/home_spinner_bg"
                android:layout_height="wrap_content">
                <EditText
                    android:visibility="gone"
                    android:inputType="numberSigned"
                    android:id="@+id/txt_min_num"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:hint="Num"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:drawablePadding="10dp"
                    android:layout_height="50dp"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:id="@+id/sp_min"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:gravity="center"
                android:background="@drawable/home_spinner_bg"
                android:layout_height="wrap_content">
                <EditText
                    android:id="@+id/txt_min_dec"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:padding="16dp"
                    android:inputType="numberDecimal"
                    android:gravity="center_vertical"
                    android:hint="Decimal"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:drawablePadding="10dp"
                    android:visibility="gone"
                    android:layout_height="50dp"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:id="@+id/sp_min_dec"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>


        <TextView
            android:padding="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="5dp"
            android:text="Maximum"
            android:textColor="@color/black"
            android:textSize="14sp">

        </TextView>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:gravity="center"
                android:background="@drawable/home_spinner_bg"
                android:layout_height="wrap_content">
                <EditText
                    android:visibility="gone"
                    android:id="@+id/txt_max_num"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:hint="Num"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:drawablePadding="10dp"
                    android:layout_height="50dp"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:id="@+id/sp_max"
                    android:layout_height="wrap_content"/>
            </LinearLayout>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_margin="10dp"
                android:gravity="center"
                android:background="@drawable/home_spinner_bg"
                android:layout_height="wrap_content">
                <EditText
                    android:visibility="gone"
                    android:id="@+id/txt_max_dec"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:padding="16dp"
                    android:gravity="center_vertical"
                    android:hint="Decimal"
                    android:inputType="numberDecimal"
                    android:singleLine="true"
                    android:textSize="16sp"
                    android:textColor="@color/colorPrimary"
                    android:drawablePadding="10dp"
                    android:layout_height="50dp"/>
                <Spinner
                    android:layout_width="match_parent"
                    android:id="@+id/sp_max_dec"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:background="@color/colorPrimary"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="40dp">

            <LinearLayout
                android:id="@+id/linearcancel"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Cancel"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_height="50dp"/>
            </LinearLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:backgroundTint="@color/white"></View>
            <LinearLayout
                android:id="@+id/linearok"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_height="wrap_content">
                <TextView
                    android:textStyle="bold"
                    android:layout_width="wrap_content"
                    android:gravity="center_vertical"
                    android:text="Ok"
                    android:textSize="16sp"
                    android:textColor="@color/white"
                    android:layout_height="50dp"/>
            </LinearLayout>

        </LinearLayout>



    </LinearLayout>

</LinearLayout>