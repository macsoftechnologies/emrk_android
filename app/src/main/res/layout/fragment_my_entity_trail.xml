<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#332E2E"
    android:padding="10dp"
    android:orientation="vertical"
    android:gravity="center_vertical"
    tools:context=".fragments.MyEntityTrailFragment">

    <TextView
        android:gravity="center_horizontal"
        android:layout_width="match_parent"
        android:text="Your First 10 Products Free"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:layout_height="wrap_content"/>

    <RelativeLayout
        android:background="@drawable/ll_trail_bg"
        android:layout_marginTop="10dp"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/txt_title"
            android:textColor="@color/white"
            android:text="One Month"
            android:textSize="16sp"
            android:fontFamily="@font/lato_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_below="@id/txt_title"
            android:textColor="@color/white"
            android:text="₹99/month after trail ends"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:src="@drawable/check"
            android:tint="@color/white"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/ll_trail_bg_stroke"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/txt_title_1"
            android:textColor="@color/white"
            android:text="3 Months"
            android:textSize="16sp"
            android:fontFamily="@font/lato_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_below="@id/txt_title_1"
            android:textColor="@color/white"
            android:text="₹99/month after trail ends"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:src="@drawable/check"
            android:tint="@color/white"
            android:visibility="gone"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/ll_trail_bg_stroke"
        android:layout_marginTop="20dp"
        android:padding="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">


        <TextView
            android:id="@+id/txt_title_2"
            android:textColor="@color/white"
            android:text="6 Months"
            android:textSize="16sp"
            android:fontFamily="@font/lato_bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_below="@id/txt_title_2"
            android:textColor="@color/white"
            android:text="₹99/month after trail ends"
            android:layout_marginTop="10dp"
            android:textSize="16sp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageView
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:src="@drawable/check"
            android:tint="@color/white"
            android:visibility="gone"
            android:layout_height="wrap_content"/>

    </RelativeLayout>

    <TextView
        android:textColor="@color/white"
        android:layout_margin="20dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="wrap_content"
        android:text="Plan automatically renews monthly"
        android:layout_height="wrap_content"/>

    <TextView
        android:id="@+id/btn_continue"
        android:padding="16dp"
        android:fontFamily="@font/lato_bold"
        android:text="Start Trail"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:layout_marginBottom="10dp"
        android:gravity="center"
        android:textColor="@color/white"
        android:textSize="16sp"
        android:background="@drawable/ll_trail_bg_start_trail"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>


</LinearLayout>