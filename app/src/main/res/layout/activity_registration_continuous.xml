<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        android:gravity="center_horizontal"
        tools:context=".activities.LoginActivity">

        <TextView
            android:layout_width="match_parent"
            android:text="Create Account"
            android:textColor="@color/colorPrimary"
            android:padding="10dp"
            android:textSize="30sp"
            android:fontFamily="@font/lato_bold"
            android:layout_height="wrap_content"/>


        <EditText
            android:id="@+id/et_entity_name"
            android:layout_marginTop="20dp"
            android:singleLine="true"
            android:hint="Entity Name"
            android:textSize="16sp"
            android:textColorHint="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <EditText
            android:drawableTint="@color/colorPrimary"
            android:id="@+id/et_primary"
            android:singleLine="true"
            android:layout_marginTop="10dp"
            android:hint="Primary Location"
            android:textSize="16sp"
            android:drawablePadding="20sp"
            android:clickable="true"
            android:editable="false"
            android:focusableInTouchMode="true"
            android:textColorHint="@color/grey"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_marginTop="5dp"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:id="@+id/ll_another_locations"
            android:layout_height="wrap_content"/>

        <TextView
            android:layout_marginTop="20sp"
            android:textColor="@color/black"
            android:padding="10dp"
            android:drawableTint="@color/colorPrimary"
            android:id="@+id/txt_add_another"
            android:drawableRight="@drawable/add"
            android:gravity="right|center_vertical"
            android:drawablePadding="10dp"
            android:textSize="16sp"
            android:layout_width="match_parent"
            android:text="Add Another Locations"
            android:layout_height="wrap_content"/>

<!--        <EditText-->
<!--            android:id="@+id/et_location"-->
<!--            android:singleLine="true"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:hint="Other Locations (ex: Goa,Hyderabad,Delhi)"-->
<!--            android:textSize="16sp"-->
<!--            android:textColorHint="@color/grey"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"/>-->

<!--        <EditText-->
<!--            android:singleLine="true"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:hint="User Profile"-->
<!--            android:textSize="16sp"-->
<!--            android:textColorHint="@color/grey"-->
<!--            android:layout_width="match_parent"-->
<!--            android:layout_height="wrap_content"/>-->

<!--        <EditText-->
<!--            android:singleLine="true"-->
<!--            android:layout_marginTop="10dp"-->
<!--            android:hint="Entity Profile"-->
<!--            android:textSize="16sp"-->
<!--            android:textColorHint="@color/grey"-->
<!--            android:layout_width="match_parent"-->
<!--            android:inputType="textEmailAddress"-->
<!--            android:layout_height="wrap_content"/>-->

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_profile"
                    android:padding="5dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/add"
                    android:scaleType="centerInside"
                    android:background="@drawable/dotted_rect"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <TextView
                    android:layout_margin="10dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:text="User Profile"
                    android:layout_height="wrap_content"/>
            </LinearLayout>

            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/iv_entity"
                    android:padding="5dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/add"
                    android:scaleType="centerInside"
                    android:background="@drawable/dotted_rect"
                    android:layout_width="100dp"
                    android:layout_height="100dp"/>
                <TextView
                    android:layout_margin="10dp"
                    android:textColor="@color/black"
                    android:layout_width="wrap_content"
                    android:text="Entity Profile"
                    android:layout_height="wrap_content"/>
            </LinearLayout>



        </LinearLayout>


        <LinearLayout
            android:id="@+id/btn_back"
            android:layout_width="150dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"
            android:gravity="center"
            android:background="@drawable/primary_store_rounded"
            android:layout_height="45dp">
            <TextView
                android:textColor="@color/colorPrimary"
                android:text="Previous"
                android:gravity="center"
                android:drawablePadding="5dp"
                android:drawableLeft="@drawable/ic_baseline_arrow_back_24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
        </LinearLayout>


        <Button
            android:id="@+id/btn_register"

            android:layout_marginTop="10dp"
            android:layout_marginBottom="20dp"
            android:textColor="@color/white"
            android:text="Register"
            android:gravity="center"
            android:layout_width="150dp"
            android:background="@drawable/login_submit_bg"
            android:layout_height="wrap_content"/>


        <TextView
            android:id="@+id/btn_login"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fontFamily="@font/lato_regular"
            android:gravity="center"
            android:textSize="16sp"
            android:text="@string/if_already_registered_user_please_login"
            android:textColor="@color/colorPrimary" />


    </LinearLayout>
</ScrollView>